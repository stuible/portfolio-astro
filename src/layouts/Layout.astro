---
import "~/assets/scss/_base.scss";

export interface Props {
  title: string;
  noTopPadding?: boolean;
}

const { title, noTopPadding = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <header>
        <a href="/"
          ><h1><img src="/logo-sideways.svg" alt="JS" />Josh Stuible</h1>
        </a>
      </header>
      <main class={noTopPadding ? "no-top-padding" : ""}>
        <slot />
      </main>
      <footer>
        design + implementation by
        <!-- <span>Josh Stuible</span> -->
        <img src="/logo-sideways.svg" alt="JS" class="logo" /> in
        <!-- <span>Vancouver</span> -->
        <img src="/logo-umbrella.svg" alt="JS" class="umbrella" />
      </footer>
    </div>
  </body>
</html>

<style is:global lang="scss"></style>

<style lang="scss">
  header {
    padding-top: 4rem;
  }
  h1 {
    font-size: 1rem;
    font-weight: normal;
    text-transform: lowercase;
    margin-bottom: 1rem;
    img {
      height: 1em;
      margin-right: 0.5em;
    }
  }
  main {
    padding: 4rem 0;

    &.no-top-padding {
      padding-top: 0;
    }
  }
  footer {
    display: flex;
    align-items: center;
    padding-bottom: 4rem;
    img {
      height: 1em;
      margin: 0 0.5em;

      &.logo {
        height: 0.65em;
      }
      &.umbrella {
        height: 0.4em;
      }
    }
  }
</style>
