---
import "~/assets/scss/_base.scss";

import { SEO } from "astro-seo";
import { Image } from "@astrojs/image/components";

import Sidebar from "../components/layout/Sidebar.vue";
import Bar from "../components/layout/Bar.astro";
import Tooltip from "~/components/global/Tooltip.vue";

export interface Props {
  title?: string;
  description?: string;
  noTopPadding?: boolean;
}

const { title: titleProp, noTopPadding = false, description } = Astro.props;

const title = (titleProp ? `${titleProp} - ` : "") + "Josh Stuible";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image:
            "https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png",
        },
      }}
      twitter={{
        creator: "@joshstuible",
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", type: "image/svg+xml", href: "/favicon.svg" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content:
              "https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png",
          },
          { name: "twitter:title", content: title },
          { name: "twitter:description", content: description },
        ],
      }}
    />
  </head>
  <body>
    <div class="container layout-container">
      {/* Left */}
      <div class="left">
        <Sidebar client:media="(min-width: 1100px)" />
      </div>
      {/* Center */}
      <div class="center">
        {/* <Bar>Need a website? Check out Q5, my freelancing company</Bar> */}
        <header class="has-icon" data-icon="logo">
          <div class="section-title">
            <a href="/">josh stuible</a>
          </div>
        </header>
        <main class={noTopPadding ? "no-top-padding" : ""}>
          <slot />
        </main>

        <footer>
          <div class="blurb">
            <span class="credits">design + implementation&nbsp;</span>
            <div class="attribution">
              by
              <Tooltip
                client:visible
                distance={15}
                triggers={["hover", "focus", "touch"]}
              >
                <div class="image">
                  <!-- <img
                    src="/logo-sideways.svg"
                    alt="Josh Stuible"
                    class="logo"
                  /> -->
                  <Image
                    src={import("~/../public/logo-sideways.svg")}
                    alt="Josh Stuible"
                    class="logo"
                  />
                </div>
                <div slot="popper">Josh Stuible</div>
              </Tooltip>
              in
              <Tooltip
                client:visible
                distance={15}
                triggers={["hover", "focus", "touch"]}
              >
                <div class="image">
                  <!-- <img
                    src="/logo-umbrella.svg"
                    alt="Vancouver"
                    class="umbrella"
                  /> -->
                  <Image
                    src={import("~/../public/logo-umbrella.svg")}
                    alt="Vancouver"
                    class="umbrella"
                  />
                </div>
                <div slot="popper">Vancouver</div>
              </Tooltip>
            </div>
          </div>
        </footer>
      </div>
      {/* Right */}
      <div class="right"></div>
    </div>
    <style is:global lang="scss"></style>

    <style lang="scss">
      .layout-container {
        display: grid;
        grid-template-columns: 1fr;
        align-items: start;
        gap: $spacing-md;

        @include breakpoint(xl) {
          grid-template-columns: 3rem auto 3rem;
        }

        // @include breakpoint(desktophd) {
        //   grid-template-columns: $spacing-lg auto $spacing-lg;
        // }
      }
      $top-padding: 7rem;
      .left {
        top: 0;
        padding-top: $spacing-md;

        @include breakpoint(xl) {
          padding-top: $top-padding;
          position: sticky;
        }
      }
      .center {
        // width: 100%;
      }

      header {
        @include breakpoint(xl) {
          // $top-padding: 5rem;
          padding-top: calc(#{$top-padding} + 24px);
        }
      }

      h1 {
        font-size: 1.5rem;
        font-weight: normal;
        text-transform: lowercase;
        margin-bottom: $spacing-md;
        // img {
        //   height: 0.8em;
        //   // margin-right: 1em;
        // }
      }
      main {
        padding: $spacing-md 0 $spacing-lg 0;

        &.no-top-padding {
          padding-top: 0;
        }
      }
      footer {
        // opacity: 0.5;
        // display: flex;
        align-items: center;
        padding-bottom: $spacing-lg;
        font-weight: 500;
        line-height: 1em;

        .blurb {
          // line-height: 2em;
          font-size: 0.5rem;
          display: flex;
          flex-wrap: wrap;
          // transform: rotate(-90deg);x

          @include breakpoint(sm) {
            font-size: 0.5rem;
          }

          @include breakpoint(md) {
            font-size: 0.6rem;
          }
        }
        .credits {
          display: inline-block;
        }
        .image {
          display: flex;
          padding: 0.25em 0.5em;

          // width: 4em;
        }
        img {
          height: auto;
          // align-self: center;
          // transform: rotate(-45deg);
          // margin: 0 0.5em;

          &.logo {
            // height: 0.65em;
            width: 43px;
          }
          &.umbrella {
            // height: 0.4em;
            width: 50px;
          }
        }
        // .label {
        //   font-size: 0.75em;
        //   margin-left: 1rem;
        //   text-transform: lowercase;
        // }
      }
    </style>
  </body>
</html>
