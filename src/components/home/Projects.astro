---
import { getCollection, getEntryBySlug } from "astro:content";
import IconPill from "../global/IconPill.astro";

import vue from "../../assets/icons/vue.svg";

const projects = await getCollection("projects");
---

<section class="section">
  <h2 class="section-title has-icon" data-icon="logo">Projects</h2>
  <ol class="projects">
    {
      projects.map((project, index) => (
        <li class="has-icon" data-icon="logo" data-project={index}>
          <a class="project-card" href={`/${project.slug}`}>
            <div class="title">{project.data.title}</div>
            <div class="subtitle">{project.data.subtitle}</div>
            <ul class="tags">
              {project.data.tags?.map((tag, index) => (
                <li class="tag">
                  <IconPill
                    label={tag}
                    icon={vue}
                    colour="#EBF2EF"
                    small={true}
                  />
                </li>
              ))}
            </ul>
          </a>
        </li>
      ))
    }
  </ol>
</section>

<style lang="scss">
  .projects {
    display: grid;
    grid-template-columns: 1fr;
    flex-direction: column;
    gap: 1.5rem;

    @include breakpoint(lg) {
      grid-template-columns: 1fr 1fr;
    }
  }
  .project-card {
    // background-color: white;
    // box-shadow: 0px 0px 50px rgba(0, 0, 0, 0.02);
    // padding: 1.5rem;
    height: 100%;
    border: solid 1px #ebebeb;
    padding: 1.25rem 1.25rem 1rem 1.25rem;
    background-color: white;

    display: flex;
    flex-wrap: wrap;
    // flex-direction: column;
    border-radius: 1rem;

    > * {
      flex: 0 0 100%;
    }

    .title {
      font-weight: 500;
      margin-bottom: 0.5rem;
      font-size: 0.75rem;
      // margin-bottom: 2rem;
    }
    .subtitle {
      font-size: 0.5em;
      color: gray;
      margin-bottom: 0.5rem;
    }
    .tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.25rem;
      align-self: flex-end;
    }
    // .tag {
    //   font-size: 0.5rem;
    //   background-color: rgb(231, 231, 231);
    //   padding: 0.4em 0.75em;
    //   border-radius: 10em;
    // }
  }
</style>
