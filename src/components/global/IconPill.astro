---
export interface Props {
  label: string;
  icon: {
    src: string;
    width: number;
    height: number;
  };
  colour: string;
}

const { label, url, icon, colour } = Astro.props;

const backgroundColor = colour;
---

<a class="pill">
  <div class="icon">
    <img src={icon.src} alt="" />
  </div>
  <span class="label">{label}</span>
</a>

<style lang="scss" define:vars={{ backgroundColor }}>
  .pill {
    display: inline-flex;
    align-items: center;
    // gap: 0.15rem;
    // padding: 0.1rem;
    padding-right: 0.5rem;
    border-radius: 1rem;
    --backgroundColor: #f5f5f5;
    background-color: var(--backgroundColor);
  }
  .icon {
    width: 1.25rem;
    height: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.3);
  }
  .label {
    font-size: 0.45em;
    font-weight: 500;
  }
</style>
